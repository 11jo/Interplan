IF
	OnCreation()	
THEN
	RESPONSE #100
	SetGlobalTimer("pxl2cave","GLOBAL",60)
END

IF
	GlobalTimerExpired("pxl2cave","GLOBAL")
	Global("pxl2cave","LOCALS",0)
	See(ThirdNearestEnemyOf(Myself))
	OR(2)
	See(NearestEnemyOf(Myself))
	HPGT(NearestEnemyOf(Myself),180)
THEN
	RESPONSE #100
		ReallyForceSpellRes("pxl2cav1",Myself)
		SetName(@30531)
		SetGlobal("pxl2cave","LOCALS",1)
END